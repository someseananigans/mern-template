  "bugs": {
    "url": "https://github.com/someseananigans/mern-template/issues"
  },
  "homepage": "https://github.com/someseananigans/mern-template#readme",
  "dependencies": {
    "concurrently": "^6.3.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.10",
    "passport": "^0.5.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^6.1.0"
  }
}
